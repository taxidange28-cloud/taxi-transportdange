# Variables d'environnement pour Transport DanGE Backend

# Port du serveur
PORT=3000

# Base de données PostgreSQL
# Option 1: Utiliser DATABASE_URL (prioritaire, format Render/Heroku)
# DATABASE_URL=postgresql://username:password@host:port/database

# Option 2: Utiliser les variables individuelles (développement local)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=transport_dange
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Secret (générer une clé aléatoire forte)
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production

# JWT Expiration
JWT_EXPIRES_IN=7d

# Firebase Admin SDK (copier depuis Firebase Console)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key-here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project-id.iam.gserviceaccount.com

# CORS Origins (domaines autorisés)
CORS_ORIGINS=http://localhost:3001,https://planning.transportdange.fr

# Environment
NODE_ENV=production
